{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,                // Keep this if you're not emitting files
    "esModuleInterop": true,
    "module": "ESNext",            // Change this to ESNext for full ES module support
    "moduleResolution": "node",     // Use Node module resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts",
    "prisma/**/*.ts"               // Include your Prisma scripts
  ],
  "exclude": ["node_modules"]
}
